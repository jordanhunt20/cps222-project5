#include <iostream>
#include <string>
#include <list>
#include <vector>
#include <boost/algorithm/string/split.hpp>
#include <boost/algorithm/string/classification.hpp>

using std::cin;
using std::cout;

#include "province.h"

int main(int argc, char * argv[])
{
	std::list <Province> provinces;

    cout << "Data representing the road network of the country: ";

    // Repeatedly read input from standard input
    do {
		string value;

		// gets the first line of input and assigns it to value
        getline(cin, value);

		int numTowns, numRoads;
		
		// getline does not skip spaces, so numRoads is at index 2
		// and numTowns at index 0
		numTowns = value[0];
		numRoads = value[2];

		Province province(numTowns);

		// add the province to our list of provinces
		provinces.push_back(province);

		// for each town, add the town to the province
		for (int i = 0; i < numTowns; i++) {
			cin >> value;
			Town town(value);
			province.addTown(town);
		}
		
		// for each road, add the roads to the province
		for (int i = 0; i < numRoads; i++) {
			std::vector<string> roadInfo;
			
			// split the string at whitespaces, storing the reults in roadInfo vector
			boost::algorithm::split(roadInfo, value, boost::algorithm::is_any_of(" "));
			province.addRoad(value
		}
		
    } while (value != 'Q' && value != 'q');
	
}
